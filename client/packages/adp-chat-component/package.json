{
  "name": "adp-chat-component",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/umd/adp-chat-component.umd.js",
  "module": "./dist/es/adp-chat-component.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/types/index.d.ts",
      "import": "./dist/es/adp-chat-component.es.js",
      "require": "./dist/umd/adp-chat-component.umd.js"
    },
    "./style.css": "./src/style.css",
    "./dist/*": "./dist/*",
    "./src/*": "./src/*"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && vue-tsc -b && npm run build:es && npm run build:umd",
    "build:es": "vite build --mode es",
    "build:umd": "vite build --mode umd",
    "preview": "vite preview",
    "analyze": "vite build --mode analyze"
  },
  "dependencies": {
    "@tdesign-vue-next/chat": "^0.4.5",
    "axios": "^1.13.2",
    "dompurify": "^3.3.1",
    "katex": "^0.16.22",
    "markdown-it": "^14.1.0",
    "markdown-it-highlightjs": "^4.2.0",
    "tdesign-vue-next": "^1.17.7",
    "vite-plugin-svg-icons": "^2.0.1"
  },
  "peerDependencies": {
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@mdit/plugin-katex": "^0.16.3",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.6.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.2",
    "@vue/tsconfig": "^0.8.1",
    "fast-glob": "^3.3.3",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.3.0",
    "vue-infinite-loading": "^3.0.0-alpha.0-0",
    "vue-tsc": "^3.1.0"
  }
}
